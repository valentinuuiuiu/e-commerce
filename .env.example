# Run on a specific port
PORT=3000

# Database connection string
# For local development, you might use something like:
# DATABASE_URI=mongodb://127.0.0.1/payload-marketplace
DATABASE_URI=mongodb://localhost/payload-marketplace-template


# Used to encrypt JWT tokens and other sensitive data by Payload
PAYLOAD_SECRET=YOUR_PAYLOAD_SECRET_KEY_HERE_CHANGE_ME

# This is the URL that your front-end will use to access the APIs of Payload
# It must be absolute, no relative paths are allowed
# Example: http://localhost:3000
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# This is also used by Next.js for various purposes, often same as PAYLOAD_PUBLIC_SERVER_URL
NEXT_PUBLIC_SERVER_URL=http://localhost:3000


# Enable Stripe integration (kept for potential future use like ad credits)
STRIPE_SECRET_KEY=
PAYLOAD_PUBLIC_STRIPE_IS_TEST_KEY=true
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Enable Stripe webhooks (optional, if using Stripe for new features)
STRIPE_WEBHOOKS_SIGNING_SECRET=


# Allow robots to index the site (optional, set to true for production)
NEXT_PUBLIC_IS_LIVE=false

# Used by Payload to preview drafts from the admin panel
PAYLOAD_PUBLIC_DRAFT_SECRET=YOUR_DRAFT_SECRET_HERE_CHANGE_ME_MIN_32_CHARS

# Used by Next.js for its preview mode, should match PAYLOAD_PUBLIC_DRAFT_SECRET
NEXT_PRIVATE_DRAFT_SECRET=YOUR_DRAFT_SECRET_HERE_CHANGE_ME_MIN_32_CHARS


# Used by Next.js for on-demand revalidation of static pages
REVALIDATION_KEY=YOUR_REVALIDATION_KEY_HERE_CHANGE_ME
NEXT_PRIVATE_REVALIDATION_KEY=YOUR_REVALIDATION_KEY_HERE_CHANGE_ME


# Clerk Environment Variables
# Replace with your actual Clerk keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_ZmluZXItZG9nLTE4LmNsZXJrLmFjY291bnRzLmRldiQ
CLERK_SECRET_KEY=sk_test_JZtngvSJJZlHMSywtGQrZXg7odzG24wM6mkRmJlDzB

# Clerk URLs - these define where Clerk redirects users
# and where your app's sign-in/sign-up pages are located.
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/
# Consider adding NEXT_PUBLIC_CLERK_FRONTEND_API if your Clerk setup uses a custom domain for frontend API
# NEXT_PUBLIC_CLERK_FRONTEND_API=your-clerk-frontend-api-domain.clerk.dev
# END Clerk Environment Variables


# Optional: Payload Admin User Seed (for initial setup)
# Set PAYLOAD_SEED to true only for the very first run or if you want to reset the admin user.
